.pc-comment
    .hd
        ng-include(src="'/pages/common/header/header.html'")
    .g-header
        ng-include(src="'/pages/personalCenter/personalHeader/personalHeader.html'")
    .g-ct
        .g-center(ng-show='data.data.length >= 1')
            .u-title-img
            .u-shadow
            .m-center-header
                    .m-header-content.m-header-left(ng-class="{'m-header-active' : kind == 2}" ng-click="changeKind(2)") 给您的评价
                    .m-header-content(ng-class="{'m-header-active' : kind == 1}" ng-click="changeKind(1)") 您写的评价
            div
                .m-center-message(ng-repeat="comment in data.data")
                    .m-img
                        img.m-message-img(ng-src="{{comment.url}}")
                        .m-message-star
                            .u-star(ng-repeat="star in getArray(comment.score) track by $index")
                    .m-message-name {{comment.name}}
                    .m-message-date {{comment.createTime}}
                    .m-message-info
                        .u-message-info(ng-class="{'centent-hide': showAllTopic}") {{comment.content}}
                    .u-bt(ng-click="showAllTopic=!showAllTopic" ng-bind="showAllTopic?'更多':'收起'")
        .g-empty(ng-show='data.data.length < 1')
            img(src='http://image.1yingli.cn/img/new/empty-service.png')
    ng-include(src="'/pages/common/pager/pager.html'")
    ng-include(src="'/pages/common/footer/footer.html'")