                li.m-top-li(style="border-bottom: 3px solid {{jionC}}" ng-click="value = 4; formJion(); jion();")
                    a.m-top-li-a 加入我们
                li.m-top-li(style="border-bottom: 3px solid {{emailC}}")
                    a.m-top-li-a(ng-click="formEmail(); email();") 联系我们
                    .m-tog(ng-show="form3")
                        .u-tog
                        .m-form3
                            .u-31(ng-click="value = 5; formJion();") 网站反馈
                            .u-32(ng-click="value = 6; formJion();") 商务合作
        .g-hide(ng-show="value == 1" ng-click="form1=false ;form3=false")
            .g-title 团队故事
            .g-ct
